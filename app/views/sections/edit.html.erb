<h1>Edit a section:</h1>

<% if @section.errors.any? %>
  <h2>Fix these errors:</h2>
  <ul>
  <% @section.errors.full_message.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sections/<%= @section.number %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label class="l-label"><span>section:</span><input class="i-number" min="1" maxlength="3" size="2" type="number" name="section[number]" value="<%= @section.number %>"></label>
  <label class="l-label"><span>Name:</span><input type="text" name="section[name]" value="<%= @section.name %>"></label>
  <label class="l-label"><span>Description:</span><textarea name="section[description]"><%= @section.description %></textarea></label>
  <div class="clear"></div>
  <button class="btn btn-danger">Submit</button>
</form>
